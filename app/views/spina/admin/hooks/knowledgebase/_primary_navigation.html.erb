<%= render Spina::MainNavigation::SubNavComponent.new(:knowledgebase) do |nav| %>
  <% nav.with_icon do %>
    <%= heroicon('pencil', style: :solid, class: 'w-8 h-8 text-white md:mr-3') %>
    
    <div class="text-white font-semibold hidden md:block transform -translate-x-2 ease-in-out duration-300 absolute md:relative opacity-0 transition-all" data-navigation-target="label">
      <%=t 'spina.knowledgebase.title' %>
    </div>
  <% end %>
  
  <% nav.with_links do %>
    <%= render Spina::MainNavigation::LinkComponent.new(t('spina.knowledgebase.articles.title'), admin_knowledgebase_articles_path, active: request.path.start_with?("/#{Spina.config.backend_path}/knowledgebase/articles")) %>
    <%= render Spina::MainNavigation::LinkComponent.new(t('spina.knowledgebase.categories.title'), admin_knowledgebase_categories_path, active: request.path.start_with?("/#{Spina.config.backend_path}/knowledgebase/categories")) %>
  <% end %>
<% end %>
